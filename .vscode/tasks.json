{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Build src/main.cpp",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/FI\"iso646.h\"",
                "/Fe:",
                "${workspaceFolder}\\build\\main.exe",
                "${workspaceFolder}\\src\\main.cpp",
                "/link",
                "/subsystem:windows",
                "user32.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ],
    "version": "2.0.0"
}